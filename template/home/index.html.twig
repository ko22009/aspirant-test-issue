{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">

        <div>{{ controllerName }}</div>
        <div>{{ methodName }}</div>

        <h1 class="mb-4">{{ trailers | length }} iTunes Movie trailers</h1>

        <div class="row">
        {% for trailer in trailers %}
        <div class="card m-2" style="width: 18rem;">
            <a href="/{{ trailer.id }}"><img class="card-img-top" src="{{ trailer.image }}" alt="{{ trailer.title }}"></a>
            <div class="card-body">
                <h5 class="card-title"><a href="/{{ trailer.id }}">{{ trailer.title }}</a></h5>
                <p class="card-text">{{ trailer.description[:50] ~ '...' }}</p>
                <a href="{{ trailer.link }}" class="btn btn-primary">More info</a>
            </div>
            <div class="card-footer text-muted">
                {{ trailer.pubDate | date('m/d/Y') }}
            </div>
        </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
